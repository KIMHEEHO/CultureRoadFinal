pipeline {
    agent any

    stages {
        stage('Ready') {
            steps {
                sh 'echo "Ready stage"'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Build stage"'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploy stage"'
            }
        }
    }
}